{
  "name": "fastify-typscript-boilerplate",
  "version": "1.0.0",
  "description": "simple fastify boiler plate with typscript and more",
  "main": "dist/app/index.js",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc",
    "prestart": "npm run build",
    "postinstall": "npm run build",
    "start": "node --inspec=5858 -r ts-node/register ./app/index.ts",
    "start:watch": "nodemon",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix"
  },
  "author": "Mahery",
  "keywords": [
    "boilerplate",
    "typescript",
    "fastify",
    "simple"
  ],
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.0",
    "fastify": "^3.27.1",
    "fastify-jwt": "^4.1.3",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@types/node": "^17.0.15"
  }
}
